<!DOCTYPE html>
<html>
<head>
  <%- include ("../partials/header.ejs") %>
</head>

<body>
<div class="jumbotron text-center">
  <div class="container">
    <a href="/" class="lang-logo">
      <img src="atlogo.jpg">
    </a>
    <h2>Airtime Vendor</h2>
    <form method="POST" action="/sign_up">
      <div class="form-group row">
		<div class="col-sm-3">
			<label for="username">Username</label>
		</div>
        <div class="col-sm-6">
          <input type="text" class="form-control" id="username" aria-describedby="username " placeholder="Enter username" name="admin_username">
        </div>
      </div>
      <div class="form-group row">
		<div class="col-sm-3">

			<label for="password">Password</label>
		</div>
		<div class="col-sm-6">

			<input type="password" class="form-control" id="password" placeholder="Enter Password" name="admin_password">
        </div>
      </div>
	  <div class="btn-div">
		  <button type="submit" class="btn btn-primary">Submit</button>
	  </div>
    </form>
  </div>
</div>
</body>
</html>
